<%- include('../layouts/boilerplate') %>

<link rel="stylesheet" href="/css/new.css" />
<section
  class="recipe-form-section d-flex justify-content-center align-items-center py-5"
>
  <div class="container p-5 bg-white shadow-lg rounded">
    <h1 class="text-center text-primary mb-3 fw-bold">Create a New Recipe</h1>
    <form
      action="/new"
      method="POST"
      enctype="multipart/form-data"
      onsubmit="showLoading()"
    >
      <div class="mb-2">
        <label class="form-label fw-semibold" for="name">Dish Name</label>
        <input
          class="form-control border-primary p-3"
          type="text"
          id="name"
          name="name"
          required
        />
      </div>

      <div class="mb-2">
        <label class="form-label fw-semibold" for="cuisine">Cuisine</label>
        <input
          class="form-control border-primary p-3"
          type="text"
          id="cuisine"
          name="cuisine"
          required
        />
      </div>

      <input type="file" name="image" id="image" required />

      <div class="mb-2">
        <label class="form-label fw-semibold" for="ingredients"
          >Ingredients</label
        >
        <textarea
          class="form-control border-primary p-3"
          id="ingredients"
          name="ingredients"
          rows="4"
          required
        ></textarea>
      </div>

      <div class="mb-2">
        <label class="form-label fw-semibold" for="steps">Steps</label>
        <textarea
          class="form-control border-primary p-3"
          id="steps"
          name="steps"
          rows="4"
          required
        ></textarea>
      </div>

      <div class="d-flex justify-content-between mt-3">
        <button
          type="submit"
          class="btn btn-success px-4 py-3 shadow fw-semibold"
        >
          Add Recipe
        </button>
        <a href="/recipe" class="btn btn-warning px-4 py-3 shadow fw-semibold"
          >All Recipes</a
        >
        <a href="/" class="btn btn-secondary px-4 py-3 shadow fw-semibold"
          >Home</a
        >
      </div>
    </form>
  </div>
</section>

<!-- Loading Animation -->
<div id="loadingOverlay">
  <div class="logo-container">
    <img src="/image/og.png" alt="Recipe Nest Logo" />
  </div>
</div>

<style>
  #loadingOverlay {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100vh;
    background: rgba(255, 255, 255, 0.9);
    display: none;
    justify-content: center;
    align-items: center;
    z-index: 9999;
  }
  .logo-container {
    width: 100px;
    animation: expandLogo 2s forwards;
  }
  .logo-container img {
    width: 100%;
  }
  @keyframes expandLogo {
    from {
      width: 50px;
      opacity: 0;
    }
    to {
      width: 250px;
      opacity: 1;
    }
  }
</style>

<script>
  function showLoading() {
    document.getElementById("loadingOverlay").style.display = "flex";
  }
</script>
